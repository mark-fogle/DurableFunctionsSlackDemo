<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AzureFunctionsVersion>v4</AzureFunctionsVersion>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Services\SlackTemplates\SlackApprovalResponseTemplate.json" />
    <None Remove="Services\SlackTemplates\SlackApprovalTemplate.json" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Services\SlackTemplates\SlackApprovalResponseTemplate.json" />
